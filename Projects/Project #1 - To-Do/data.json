            "text": "Save List",
            "classes": [
                "form-limited-width",
                "text-center",
                "mx-auto"
            ]
        },
        "inputs": [
            {
                "type": "hidden",
                "id": "taskNum",
                "value": 0,
                "required": true
            },
            {
                "type": "text",
                "id": "todoTaskListName",
                "class": ["form-control"],
                "label": "List name",
                "error": "todoTaskListNameError",
                "required": true
            }
        ]
    },
