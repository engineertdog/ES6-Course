    "login": {
        "id": "login",
        "page": "loginUser",
        "classes": [
            "container",
            "h-100",
            "guestPage",
            "loginUser",
            "d-none"
        ],
        "child": {
            "classes": [
                "mx-auto",
                "d-flex",
                "justify-content-center",
                "flex-column",
                "h-100"
            ]
        },
        "title": {
            "name": "Login",
            "classes": [
                "display-4",
                "text-center"
            ]
        },
        "form": {
            "id": "loginForm",
            "error": "loginError",
            "classes": [
                "form",
                "form-limited-width"
            ]
        },
        "submit": {
            "text": "Sign in"
        },
        "inputs": [
            {
                "type": "email",
                "id": "loginEmail",
                "class": ["form-control"],
                "label": "Email Address",
                "required": true
            },
            {
                "type": "password",
                "id": "loginPassword",
                "class": ["form-control"],
                "label": "Password",
                "required": true
            }
        ]
    },
    "register": {
        "id": "register",
        "page": "registerUser",
        "classes": [
            "container",
            "h-100",
            "guestPage",
            "registerUser",
            "d-none"
        ],
        "child": {
            "classes": [
                "mx-auto",
                "d-flex",
                "justify-content-center",
                "flex-column",
                "h-100"
